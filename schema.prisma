generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_SERVER")
}

model User {
  name     String    @db.VarChar(50)
  password String
  id       Int       @id @default(autoincrement())
  tag      Int       @unique
  messages Message[]
  servers  Room[]
}

model Message {
  id         Int      @id @default(autoincrement())
  content    String
  author_id  Int
  server_id  Int
  created_at DateTime @default(now())
  author     User     @relation(fields: [author_id], references: [id])
  server     Room     @relation(fields: [server_id], references: [id])
}

model Room {
  id       Int       @id @default(autoincrement())
  code     String    @unique
  name     String
  messages Message[]
  users    User[]
}
