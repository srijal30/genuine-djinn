generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_SERVER")
}

model User {
  name     String    @db.VarChar(50)
  password String
  id       Int       @id @default(autoincrement())
  tag      Int       @unique
  messages Message[]
  servers  Room[]
}

model Message {
  user_id Int
  id      Int    @id @default(autoincrement())
  content String
  user    User   @relation(fields: [user_id], references: [id])
}

model Room {
  id    Int    @id @default(autoincrement())
  code  String @unique
  name  String
  users User[]
}
